<?xml version="1.0"?>

<registration>

	<tool id="osp.evaluation" title="Evaluations" description="View outstanding evaluations from student's ePortfolio matrices and wizards">

      <category name="sakai.main" />
      <category name="portfolio" />
      <category name="myworkspace" />

       <keyword name="matrix" />
       <keyword name="evaluate" />
       <keyword name="evaluation" />
       <keyword name="evaluator" />
       <keyword name="reflect" />
       <keyword name="reflection" />

       <configuration name="theospi.resetUrl"
            value="/member/listEvaluationItems.osp" />
       <configuration name="theospi.toolListenerId"
            value="org.theospi.portfolio.security.mgt.ToolPermissionManager.review" /> 
       <configuration name="functions.require" value="osp.portfolio.evaluation.use" />
       
	</tool>

</registration>
